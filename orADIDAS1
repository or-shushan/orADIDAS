<script>
  const select = document.getElementById('dashboard-select');
  const loaded = {};

  select.addEventListener('change', function () {
    const selected = this.value;

    // הסתר את כל הדשבורדים
    document.querySelectorAll('.dashboard-section').forEach(section => {
      section.style.display = 'none';
    });

    if (selected === 'all') {
      ['dashboard1', 'dashboard2', 'dashboard3', 'dashboard4'].forEach(id => {
        const section = document.getElementById(id);
        section.style.display = 'block';
        loadViz(section);
      });
    } else {
      const section = document.getElementById(selected);
      section.style.display = 'block';
      loadViz(section);
    }

    // הסתר את הלוגו
    document.getElementById('logo-placeholder').style.display = 'none';
  });

  function loadViz(section) {
    const container = section.querySelector('.tableauContainer');
    const url = container.getAttribute('data-url');

    if (!loaded[container.id]) {
      new tableau.Viz(container, url, {
        width: '100%',
        height: '90vh',
        hideTabs: true,
        hideToolbar: false
      });
      loaded[container.id] = true;
    }
  }
</script>

